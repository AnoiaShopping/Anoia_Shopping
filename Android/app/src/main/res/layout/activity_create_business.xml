<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="372dp"
        tools:layout_editor_absoluteY="187dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".views.CreateBusinessActivity">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="194dp"
                android:layout_height="143dp"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/todo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dibuixfotoperfil"
                android:clickable="true"/>

            <EditText
                android:id="@+id/txtEditNomBotiga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginEnd="45dp"
                android:layout_marginRight="45dp"
                android:hint="Nom Botiga"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:layout_constraintVertical_bias="0.051" />

            <Spinner
                android:id="@+id/spinnerEditTipusBotiga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/txtEditNomBotiga"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/txtEditWebNegoci"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Web negoci (si existeix)"
                app:layout_constraintEnd_toEndOf="@+id/spinnerEditTipusBotiga"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/spinnerEditTipusBotiga"
                app:layout_constraintTop_toBottomOf="@+id/spinnerEditTipusBotiga" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:hint="Tipus de Negoci"
                app:layout_constraintStart_toStartOf="@+id/txtEditNomBotiga"
                app:layout_constraintTop_toBottomOf="@+id/txtEditNomBotiga" />

            <EditText
                android:id="@+id/txtEditDefinicioBotiga"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:hint="Definicio del que ofereixes"
                app:layout_constraintEnd_toEndOf="@+id/txtEditWebNegoci"
                app:layout_constraintStart_toStartOf="@+id/txtEditWebNegoci"
                app:layout_constraintTop_toBottomOf="@+id/txtEditWebNegoci" />

            <Button
                android:id="@+id/btCrearBotiga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:text="Crear NEGOCI"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEditTwitter" />

            <EditText
                android:id="@+id/txtEditInstagram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="22dp"
                android:hint="Instagram"
                app:layout_constraintEnd_toEndOf="@+id/txtEditDefinicioBotiga"
                app:layout_constraintStart_toStartOf="@+id/txtEditDefinicioBotiga"
                app:layout_constraintTop_toBottomOf="@+id/txtEditDefinicioBotiga" />

            <EditText
                android:id="@+id/txtEditFacebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:hint="Facebook"
                app:layout_constraintEnd_toEndOf="@+id/txtEditDefinicioBotiga"
                app:layout_constraintStart_toStartOf="@+id/txtEditDefinicioBotiga"
                app:layout_constraintTop_toBottomOf="@+id/txtEditInstagram" />

            <EditText
                android:id="@+id/txtEditTwitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:hint="Twitter"
                app:layout_constraintEnd_toEndOf="@+id/txtEditDefinicioBotiga"
                app:layout_constraintStart_toStartOf="@+id/txtEditDefinicioBotiga"
                app:layout_constraintTop_toBottomOf="@+id/txtEditFacebook" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="35dp"
                android:layout_height="31dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtEditInstagram"
                app:layout_constraintEnd_toStartOf="@+id/txtEditInstagram"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEditDefinicioBotiga"
                app:srcCompat="@drawable/instagram" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="95dp"
                android:layout_height="140dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEditTwitter"
                app:srcCompat="@drawable/as1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="37dp"
                android:layout_height="29dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="75dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtEditFacebook"
                app:layout_constraintEnd_toStartOf="@+id/txtEditFacebook"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEditDefinicioBotiga"
                app:srcCompat="@drawable/facebook" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="135dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtEditTwitter"
                app:layout_constraintEnd_toStartOf="@+id/txtEditTwitter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEditDefinicioBotiga"
                app:srcCompat="@drawable/twitter" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>