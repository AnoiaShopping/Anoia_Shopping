<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="dam.anoiashopping.gtidic.udl.cat.viewmodels.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LoginActivity">

        <ImageView
            android:id="@+id/i_Logo"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="@android:dimen/thumbnail_height"
            android:contentDescription="App Logotipo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.100000024"
            app:srcCompat="@drawable/as1" />

        <EditText
            android:id="@+id/i_Username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/username"
            android:text="@={viewModel.email}"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/i_Logo" />

        <EditText
            android:id="@+id/i_Password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="@string/password"
            android:text="@={viewModel.password}"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/i_Username"
            app:layout_constraintStart_toStartOf="@+id/i_Username"
            app:layout_constraintTop_toBottomOf="@+id/i_Username"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/b_LogIn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/logIn2"
            android:onClick="@{() -> viewModel.onLogin()}"
            app:layout_constraintEnd_toEndOf="@+id/i_Password"
            app:layout_constraintStart_toStartOf="@+id/i_Password"
            app:layout_constraintTop_toBottomOf="@+id/i_Password" />

            <TextView
            android:id="@+id/b_LostPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:text="@string/forgotPassword"
            app:layout_constraintEnd_toEndOf="@+id/i_Password"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/i_Password"
            app:layout_constraintTop_toBottomOf="@+id/i_Password" />

            <Button
                android:id="@+id/b_registre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/singInButton"
                android:onClick="@{() -> viewModel.onRegisterClick()}"
                app:layout_constraintEnd_toEndOf="@+id/b_LogIn1"
                app:layout_constraintStart_toStartOf="@+id/b_LogIn1"
                app:layout_constraintTop_toBottomOf="@+id/b_LogIn1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>