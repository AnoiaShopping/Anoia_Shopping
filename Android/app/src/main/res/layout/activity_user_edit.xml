<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="372dp"
        tools:layout_editor_absoluteY="187dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".views.UserEditActivity">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="169dp"
                android:layout_height="128dp"
                android:layout_marginTop="40dp"
                android:contentDescription="@string/todo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dibuixfotoperfil" />

            <EditText
                android:id="@+id/txtEditNomBotiga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginEnd="45dp"
                android:layout_marginRight="45dp"
                android:autofillHints=""
                android:hint="Nom Botiga"
                android:inputType="TODO"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:layout_constraintVertical_bias="0.075" />

            <Spinner
                android:id="@+id/spinnerEditTipusBotiga"
                android:layout_width="0"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/txtEditNomBotiga"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/txtEditWebNegoci"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Web negoci (si existeix)"
                app:layout_constraintEnd_toEndOf="@+id/spinnerEditTipusBotiga"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/spinnerEditTipusBotiga"
                app:layout_constraintTop_toBottomOf="@+id/spinnerEditTipusBotiga" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:hint="Tipus de Negoci"
                app:layout_constraintStart_toStartOf="@+id/txtEditNomBotiga"
                app:layout_constraintTop_toBottomOf="@+id/txtEditNomBotiga" />

            <TextView
                android:id="@+id/txtEditDefinicioBotiga"
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:hint="Definicio del que ofereixes"
                app:layout_constraintEnd_toEndOf="@+id/txtEditWebNegoci"
                app:layout_constraintStart_toStartOf="@+id/txtEditWebNegoci"
                app:layout_constraintTop_toBottomOf="@+id/txtEditWebNegoci" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="15dp"
                android:text="Crear NEGOCI"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="32dp"
                android:hint="Instagram"
                app:layout_constraintEnd_toEndOf="@+id/txtEditDefinicioBotiga"
                app:layout_constraintStart_toStartOf="@+id/txtEditDefinicioBotiga"
                app:layout_constraintTop_toBottomOf="@+id/txtEditDefinicioBotiga" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:hint="Facebook"
                app:layout_constraintStart_toStartOf="@+id/txtEditDefinicioBotiga"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:hint="Twitter"
                app:layout_constraintStart_toStartOf="@+id/txtEditDefinicioBotiga"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>