<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dam.anoiashopping.gtidic.udl.cat">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:icon="@mipmap/anoiashoppinglogo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/anoiashoppinglogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity android:name=".views.Activities.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".views.Activities.RecoveryCodeActivity" />
        <activity android:name=".views.Fragments.CreateBusinessActivity" />
        <activity android:name=".views.Fragments.ConfigurationActivity" />
        <activity android:name=".views.Fragments.BusinessActivity" />

        <activity
            android:name=".views.Fragments.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
        </activity>

        <activity android:name=".views.Activities.RegisterConfirmationActivity" />
        <activity android:name=".views.Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.Activities.RegisterActivity" />
    </application>

</manifest>